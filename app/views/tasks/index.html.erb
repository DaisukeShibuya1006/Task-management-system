<h1>Tasks list</h1>
<%= link_to "登録", new_task_path %><br>

<%= form_with url: index_path, method: :get, local: true do |f|%>
   <%= f.text_field :title, value: params[:title] %>
   <%= f.select :status, options_for_select([["未着手","0"],["着手","1"],["完了","2"]])%>
   <%= f.submit :search%>
<% end %>

<%= sort_asc "priority"%><%= sort_desc "priority"%>

<table>
     <thead>
        <tr>
            <th>タイトル<th>
            <th>内容</th>
            <th>作成日</th>
            <th>期限</th>
            <th>進捗</th>
            <th>優先度</th>
        </tr>
     </thead>
   <tbody>
      <% @tasks.each do |task| %>
        <tr>
            <td><%= task.title %><td>
            <td><%= task.text %><td>
            <td><%= task.created_at %></td>
            <td><%= task.deadline %><td>
            <td><%= task.status_i18n %><td>
            <td><%= task.priority_i18n %><td>
            <td><%= link_to "詳細", task_path(task.id) %><td>
            <td><%= link_to "削除", task_path(task.id), method: :delete %></td>
        </tr>
      <% end %>
   </tbody>
</table>


