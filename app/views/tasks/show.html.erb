<div class="container text-center">
   <table class="table table-hover">
      <thead>
         <tr>
            <th>ユーザー名</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>作成日</th>
            <th>期限</th>
            <th>進捗</th>
            <th>優先度</th>
         </tr>
      </thead>
      <tbody>
         <tr scope="row">
            <th><%= @task.user.name %></th>
            <td><%= @task.title %></td>
            <td><%= @task.text %></td>
            <td><%= @task.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= @task.deadline&.strftime('%Y/%m/%d')  %></td>
            <td><%= @task.status_i18n %></td>
            <td><%= @task.priority_i18n %></td>
            <td><%= link_to "編集", edit_task_path(@task) %></td>
            <td><%= link_to "削除", task_path(@task), method: :delete, data: {confirm: "削除しますか？"} %></td>
         </tr>
      </tbody>
   </table>
   <%= link_to "戻る", 'javascript:history.back()' ,class: 'btn btn-secondary' %>
</div>
