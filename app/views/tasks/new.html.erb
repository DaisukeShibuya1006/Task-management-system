<%= form_for (@task) do |f| %>
    <%= render 'layouts/error_messages'%>
      <%= f.label :タイトル %>
      <%= f.text_field :title %><br>

      <%= f.label :内容 %>
      <%= f.text_field :text %><br>

      <%= f.label :期限 %>
      <%= f.text_field :deadline %><br>

      <%= f.label :進捗 %>
      <%= f.select :status, Task.statuses.keys.map {|k| [Task.statuses_i18n[k],k]} %>

      <%= f.label :優先度 %>
      <%= f.select :priority, Task.priorities.keys.map {|k| [Task.priorities_i18n[k],k]} %><br>

      <%= f.submit "作成する" %>
<% end %>

