<%= search_form_for @q, url: tasks_search_status_path do |f| %>
   <%= f.label :status, 'ステータス' %>
   <%= f.radio_button :status_eq, 0 %>未着手
   <%= f.radio_button :status_eq, 1 %>着手
   <%= f.radio_button :status_eq, 2 %>完了
   <%= f.submit "検索" %>
<% end %><br>

<% if @searchs.any? %>
  <% @searchs.each do |search| %>
     <p><%= search.title %></p>
  <% end %>
  <% else %>
  <h1>キーワードを含むタスクはありません。</h1>
  <% end %>