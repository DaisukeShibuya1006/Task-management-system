<div class="container text-center">
   <table class="table table-hover">
      <thead>
         <tr>
            <th>名前</th>
            <th>管理者権限</th>
         </tr>
      </thead>
      <tbody>
            <tr scope="row">
               <td><%= @user.name %></td>
               <td><%= @user.admin? ? 'あり' : 'なし' %></td>
               <td><%= link_to "編集", edit_admin_user_path(@user) %></td>
               <td><%= link_to "削除", admin_user_path(@user.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
            </tr>
      </tbody>
   </table>
   <%= link_to "ユーザ一覧", admin_users_path ,class: 'btn btn-secondary' %>
</div>
