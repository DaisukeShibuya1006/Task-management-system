<div class="container text-center">
   <table class="table table-hover">
      <thead>
         <tr>
            <th>名前</th>
            <th>管理者権限</th>
         </tr>
      </thead>
      <tbody>
            <tr scope="row">
               <td><%= @user.name %></td>
               <td><%= @user.admin? ? 'あり' : 'なし' %></td>
               <td><%= link_to "編集", edit_admin_user_path(@user) %></td>
               <td><%= link_to "削除", admin_user_path(@user.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
            </tr>
      </tbody>
   </table>
   <div class="container text-center">
   <table class="table table-hover">
      <thead>
         <tr>
            <th>タイトル</th>
            <th>内容</th>
            <th>作成日</th>
            <th>期限</th>
            <th>進捗</th>
            <th>優先度</th>
         </tr>
      </thead>
      <tbody>
         <% @tasks.each do |task| %>
            <tr scope="row">
               <td><%= link_to task_path(task.id)do %><%= task.title %><% end %></td>
               <td><%= task.text %></td>
               <td><%= task.created_at.strftime('%Y/%m/%d') %></td>
               <td><%= task.deadline&.strftime('%Y/%m/%d')  %></td>
               <td><%= task.status_i18n %></td>
               <td><%= task.priority_i18n %></td>
               <td><%= link_to "削除", task_path(task.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
            </tr>
         <% end %>
      </tbody>
   </table>
</div>
<%= paginate @tasks %>
   <%= link_to "ユーザ一覧", admin_users_path ,class: 'btn btn-secondary' %>
</div>
